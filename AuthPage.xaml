<Page x:Class="San4oClient.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:San4oClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage"
      WindowTitle="my new auth page!">

    <Grid>
        <Button x:Name="signInButton" Content="Жмакай сюды" HorizontalAlignment="Left" Margin="370,217,0,0" VerticalAlignment="Top" Width="75" Click="signInButton_Click"/>
        <Button x:Name="signUpButton" Content="Sign up" HorizontalAlignment="Left" Margin="370,242,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Height="23" Margin="345,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="23" Margin="345,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Page>
